<div class="row">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      
  <div class="wrapper">  


<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>

<h2 class="form-signin-heading">Crear cuenta</h2>
  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true,requiered: true, :class=>"form-control input-lg" ,placeholder: "Ingrese su email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Contrasena" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",requiered: true,:class=>"form-control input-lg", placeholder: "Ingrese su password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirme su password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",requiered: true,:class=>"form-control input-lg", placeholder: "Repita su password" %>
  </div>
 <%= f.check_box(:admin, value: true) %>
  <div class="actions">
    <%= f.submit "Sign up" , :class=>"btn btn-lg btn-primary btn-block"%>
  </div>
<div class="actions">
<%= render "devise/shared/links" %>
 </div>

  
<% end %>
</div>
    </div>
  </div>


