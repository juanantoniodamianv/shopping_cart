    


<div class="col-md-3 col-sm-2 col-sx-1   grid1_of_3"> 
  

    <%= link_to product do %>
    
				<% product.galleries.each do |p| %>
					<% if p.image_check ==true %>
						<%=image_tag(p.photo.url)  %>
					<%end%>
				<%end%>


            <% end %>
          <h3><%= product.name%></h3>
          <div class="price">
            <h4>$ <%= product.price%><span><%=  link_to 'Add to Cart', add_shop_path(product),class: "cart_add",remote: true, method: :post  %></span></h4>
          </div>
          <span class="b_btm"></span>
   
 

</div>



     