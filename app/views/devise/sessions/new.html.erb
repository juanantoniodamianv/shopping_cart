
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      
  <div class="wrapper">  


<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => 'form-signin' }) do |f| %>
<h2 class="form-signin-heading">Iniciar sesion</h2>

  <div class="field">

    

    <%= f.email_field :email, autofocus: true,requiered: true, :class=>"form-control input-lg" ,placeholder: "Ingrese su usuario"%>
  </div>

  <div class="field">
   
    <%= f.password_field :password, autocomplete: "off",requiered: true,:class=>"form-control input-lg", placeholder: "Ingrese su password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
 
    <label class="checkbox">
      
     <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>

    </label>

    
   
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class=>"btn btn-lg btn-primary btn-block" %>
  </div>
  <div class="actions">
     <%= render "devise/shared/links" %>

  </div>
 
<% end %>


</div>
    </div>
  </div>


