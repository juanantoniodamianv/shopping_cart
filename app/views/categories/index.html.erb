
<div class="container">

<div class="panel panel-default">
  <div class="panel-heading"><h3>Categorias </h3></div>
  <div class="panel-body">
   

<%= link_to 'Create category', new_category_path, 
            data: { modal: true } %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Categoria</th>

      </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>

      <tr>
            <td><%= category.name %></td>
<td>

             <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, category,class: 'btn btn-default'  %>  <span>
        <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
'.html_safe,edit_category_path(category),class: 'btn btn-default'  %>  <span>
        <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>
'.html_safe, category, method: :delete, data: { confirm: 'Seguro que desea eliminar la categoria?' },class: 'btn btn-default'  %>  <span>



</td>
 






      

           

      </tr>
 <% end %>
    </tbody>
  </table>





  </div>
</div>
</div>





